{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs
{% endblock %}

{% block body %}
	<div class="container mt-5">

		<div class="jumbotron">
			<h2 class="display-3"></h2>

			<hr class="my-4">

			<p class="lead"></p>
		</div>
		<div class="card mb-6">
			<h1>Gestion des Utilisateurs</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Password</th>
						<th>Website</th>
						<th>Details</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>***</td>
							<td>{{ user.website }}</td>
							<td>{{ user.details }}</td>
							<td>
								<a href="{{ path('user_show', {'id': user.id}) }}">
									<i class="bi bi-eye"></i>
								</a>
								<a href="{{ path('user_edit', {'id': user.id}) }}">
									<i class="bi bi-pencil"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a href="{{ path('user_new') }}" class="btn btn-success">Ajouter un Nouveau Utilisateur</a>
	</div>
{% endblock %}
