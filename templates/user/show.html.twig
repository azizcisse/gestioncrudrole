{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container mt-5">

		<div class="jumbotron">
			<h2 class="display-3"></h2>

			<hr class="my-4">

			<p class="lead"></p>
		</div>
		<div class="container w-50 h-50 ">

			<h1>Liste des Utilisateurs</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Password</th>
						<td>{{ user.password }}</td>
					</tr>
					<tr>
						<th>Website</th>
						<td>{{ user.website }}</td>
					</tr>
					<tr>
						<th>Details</th>
						<td>{{ user.details }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('user_index') }}">
				<i class="bi bi-eye"></i>
			</a>

			<a href="{{ path('user_edit', {'id': user.id}) }}">
				<i class="bi bi-pencil"></i>
			</a>

			{{ include('user/_delete_form.html.twig') }}
		</div>
	</div>

{% endblock %}
